<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <FrameLayout
        android:id="@+id/fl_push_container"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp" />

    <FrameLayout
        android:id="@+id/fl_text_chain_container"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="150dp" />

    <FrameLayout
        android:id="@+id/fl_bubble_container"
        android:layout_width="100dp"
        android:layout_height="36dp"
        android:layout_below="@id/fl_text_chain_container"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp" />

    <FrameLayout
        android:id="@+id/fl_banner_container"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_below="@id/fl_bubble_container"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="16dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fl_text_chain_container"
        android:layout_marginTop="10dp"
        android:onClick="refreshTextChain"
        android:text="刷新文字链" />


</RelativeLayout>

